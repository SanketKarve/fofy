<!DOCTYPE html>
<html>
  <head>
    <title>Fofy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if user_signed_in? %>
      <%= render "shared/navbar" %>
      <%= semantic_flash  %>
      <%= yield %>
    <% else %>
      <%= semantic_flash  %>
      <%= yield %>
    <% end %>
  </body>
</html>
